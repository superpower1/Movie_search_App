<link rel="stylesheet" href="/stylesheets/login.css">

<%= @error_msg %>

<form action="/signup" method="post">
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">User name</label>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend3"><i class="fa fa-user-o"></i></span>
        </div>
        <input type="text" class="form-control" id="inputName" placeholder="User name" name="name">
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend3"><i class="fa  fa-envelope-o"></i></span>
        </div>
        <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email">
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword1" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend3"><i class="fa  fa-key"></i></span>
        </div>
        <input type="password" class="form-control" id="inputPassword1" placeholder="Password" name="password">
      </div>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword2" class="col-sm-2 col-form-label">Confirm Password</label>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend3"><i class="fa  fa-key"></i></span>
        </div>
        <input type="password" class="form-control" id="inputPassword2" placeholder="Password">
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">Agree to terms and conditions</div>
    <div class="col-sm-10">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck1">
        <label class="form-check-label" for="gridCheck1">
          I Agree
        </label>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Sign up</button>
    </div>
  </div>
</form>

<script src="/javascripts/signup.js" charset="utf-8"></script>
