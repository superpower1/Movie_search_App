<link rel="stylesheet" href="/stylesheets/user_profile.css">
<link rel="stylesheet" href="/stylesheets/user_sidebar.css">

<div class="user-main">
  <h2>User Info</h2>

  <table class="user-info">
    <tr>
      <td>User Name:</td>
      <td><%= current_user.name %></td>
      <td><a href="/user/edit/name">Change</a></td>
    </tr>
    <tr>
      <td>User Email:</td>
      <td><%= current_user.email %></td>
      <td></td>
    </tr>
    <tr>
      <td>Password:</td>
      <td>******</td>
      <td><a href="/user/edit/pwd">Change</a></td>
    </tr>
  </table>

  <form class="logout-btn" action="/session" method="post">
    <input type="hidden" name="_method" value="delete">
    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit" name="button">Logout</button>
  </form>
</div>

<div class="sidebar">
  <div class="nav-right">
    <div class="sidebar-button" id="btn">
      <i class="fa fa-chevron-left"></i>
    </div>
  </div>
  <ul class="sidebar-list">
    <li class="sidebar-item">
      <i class="fa fa-user"></i>
      <a href="/user/edit" class="sidebar-anchor">
        User Info
      </a>
    </li>
    <li class="sidebar-item">
      <i class="fa fa-heart"></i>
      <a href="/user/favor" class="sidebar-anchor">
        Favorite Movie
      </a>
    </li>
    <li class="sidebar-item">
      <i class="fa fa-bookmark"></i>
      <a href="/user/saved" class="sidebar-anchor">
        Saved Movie
      </a>
    </li>
  </ul>
</div>

<script src="/javascripts/user_sidebar.js" charset="utf-8"></script>
